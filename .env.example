# ==============================================
# Roommate Finder - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
APP_NAME="Roommate Finder API"
DEBUG=False
API_VERSION=v1

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
# PostgreSQL connection string
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=

# Connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ----------------------------------------------
# Redis Configuration
# ----------------------------------------------
# Redis connection for caching
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ----------------------------------------------
# Celery Configuration (Background Tasks)
# ----------------------------------------------
# Use different Redis databases for broker and results
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ----------------------------------------------
# JWT Authentication
# ----------------------------------------------
# IMPORTANT: Generate a secure key for production
# Use: openssl rand -hex 32
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ----------------------------------------------
# Password Hashing
# ----------------------------------------------
# Number of bcrypt rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ----------------------------------------------
# Matching Algorithm Configuration
# ----------------------------------------------
MATCHING_VERSION=v1
MATCHING_MAX_DISTANCE_KM=50.0
MATCHING_MIN_SCORE_THRESHOLD=30
MATCHING_DEFAULT_LIMIT=20

# ----------------------------------------------
# Rate Limiting
# ----------------------------------------------
RATE_LIMIT_MESSAGES_PER_HOUR=50
RATE_LIMIT_MATCH_REQUESTS_PER_DAY=100

# ----------------------------------------------
# Reputation System
# ----------------------------------------------
REPUTATION_INITIAL_SCORE=100
REPUTATION_GHOSTING_PENALTY=-10
REPUTATION_SPAM_PENALTY=-5
REPUTATION_MIN_SCORE=0
REPUTATION_MAX_SCORE=100

# ----------------------------------------------
# Pagination Defaults
# ----------------------------------------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ----------------------------------------------
# Location Settings
# ----------------------------------------------
LOCATION_SEARCH_RADIUS_KM=50.0

# ----------------------------------------------
# Email Configuration (Optional - Future Feature)
# ----------------------------------------------
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=

# ----------------------------------------------
# AWS / Cloud Storage (Optional - Future Feature)
# ----------------------------------------------
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# S3_BUCKET_NAME=

# ----------------------------------------------
# Monitoring & Logging (Optional)
# ----------------------------------------------
# SENTRY_DSN=
# LOG_LEVEL=INFO

# ----------------------------------------------
# CORS Settings (Optional)
# ----------------------------------------------
# ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
